@model HelpDeskSystem.Models.SystemTask

@{
    ViewData["Title"] = "Details";
}

<h1>System Task Details</h1>

<div class="card rounded-4">
    <div class="card-body">
        <table class="table table-bordered table-responsive table-hover table-responsive-lg">
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Code)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Parent)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Parent.Id)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderNumber)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderNumber)
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row p-3">
    <div class="form-group">
        <a class="btn btn-primary float-end" asp-action="Edit" asp-route-id="@Model?.Id"> <i class="fadeIn animated bx bx-save"></i> Update System Task </a>
        <a class="btn btn-warning float-start" asp-action="Index"><i class="fadeIn animated bx bx-arrow-back"></i> Back to List</a>
    </div>
</div>